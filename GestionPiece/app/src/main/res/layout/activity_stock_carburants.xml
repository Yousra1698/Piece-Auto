<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    android:layout_margin="10dp"
    android:backgroundTint="#cbe2fe"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_background"
        >
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designation:"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                />
            <TextView
                android:id="@+id/prixAchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prix achat:"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                />
            <TextView
                android:id="@+id/dateAchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date achat:"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                />
            <TextView
                android:id="@+id/prixVente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Prix Vente:"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                />
            <TextView
                android:id="@+id/fornisseur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fornisseur:"
                android:textSize="19sp"
                android:textStyle="bold"
                android:layout_margin="6dp"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>